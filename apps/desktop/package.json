{
  "name": "@teboraw/desktop",
  "version": "1.0.0",
  "private": true,
  "description": "Teboraw Desktop Activity Tracker",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-builder",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "active-win": "^8.1.0",
    "axios": "^1.7.9",
    "electron-store": "^10.0.0",
    "screenshot-desktop": "^1.15.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.5"
  },
  "build": {
    "appId": "com.teboraw.desktop",
    "productName": "Teboraw",
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage"]
    }
  }
}
