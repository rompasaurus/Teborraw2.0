{
  "manifest_version": 3,
  "name": "Teboraw - Browser Activity Tracker",
  "version": "1.0.0",
  "description": "Track your browsing activity and sync with Teboraw",
  "permissions": [
    "tabs",
    "history",
    "storage",
    "alarms",
    "idle",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup/index.html"
  }
}
